{
  "name": "runty",
  "author": "_nderscore",
  "version": "0.0.6",
  "description": "Extensible conditional string micro templates",
  "keywords": [
    "string",
    "template",
    "interpolation",
    "substitution",
    "expansion"
  ],
  "license": "MIT",
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:cjs": "babel --delete-dir-on-start --out-dir dist/cjs --env-name cjs ./src",
    "build:esm": "babel --delete-dir-on-start --out-dir dist/esm ./src",
    "lint": "eslint --fix .",
    "test": "jest",
    "preversion": "yarn test",
    "prepublishOnly": "yarn build"
  },
  "homepage": "https://github.com/nderscore/runty#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/nderscore/runty"
  },
  "engines": {
    "node": ">= 8"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "devDependencies": {
    "@babel/cli": "7.11.6",
    "@babel/core": "7.11.6",
    "@babel/preset-env": "7.11.5",
    "babel-jest": "26.3.0",
    "eslint": "7.9.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jest": "24.0.1",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "lint-staged": "10.4.0",
    "prettier": "2.1.1"
  }
}
